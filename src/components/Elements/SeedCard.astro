---
import { Picture } from "@astrojs/image/components";

export interface Props {
  s: any;
}

const { s } = Astro.props;
---

<div class="card">
  <div class="card-img">
    <Picture
      alt={"Thumbnail " + s.data.name}
      aspectRatio="1:1"
      background="transparent"
      class="thumbnail"
      fit="cover"
      formats={["avif", "webp", "jpeg"]}
      height="90px"
      sizes={"(max-width: 1400px) 90px,90px"}
      src={"/images/seeds/" + s.slug.substr(9) + "/keyvisual.jpg"}
      position="center"
      width="90px"
      widths={[90, 180]}
      style=""
    />
  </div>
  <div class="card-body">
    <a href={"/" + s.slug}>
      <h3>
        {s.data.name}
        <span>&rarr;</span>
      </h3>
      <p>
        {s.data.desc_short.substring(0, 80) + "..."}
      </p>
    </a>
  </div>
</div>

<style>
  .card {
    flex-direction: row;
    flex-grow: 1;
    flex-basis: 200px;
    padding: var(--padd-md);
    background-color: white;
    border-radius: var(--rad-md);
    background-position: 100%;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -2px rgba(0, 0, 0, 0.1);
  }

  .card > a {
    text-decoration: none;
  }

  .card-img {
    float: left;
    height: auto;
    width: auto;
    padding-right: var(--padd-md);

    img,
    picture {
      height: 90px;
      width: 90px;
    }
  }
  .card-body {
    padding: var(--padd-sm);
  }
  h3 {
    padding: 0;
    margin: 0;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }
</style>
